# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (サーバーサイド用)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
ADMIN_PASSWORD=YourSecureAdminPassword!

# Environment
NEXT_PUBLIC_USE_FIREBASE=true
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=https://example.com
NEXT_PUBLIC_DEMO_MODE=false

# Redis (キャッシュ用)
REDIS_URL=redis://default:your_redis_password@your-redis-host:6379
REDIS_KEY_PREFIX=beeartena

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
ADMIN_EMAIL=admin1@example.com,admin2@example.com

# Optional: External Services
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# LINE_CHANNEL_ACCESS_TOKEN=
# INSTAGRAM_ACCESS_TOKEN=

# LINE公式アカウント（Messaging API）
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token

# LINEログイン（Firebase OIDC Provider）
NEXT_PUBLIC_LINE_OIDC_PROVIDER_ID=oidc.line
NEXT_PUBLIC_LIFF_ID=

# Optional: Forward LINE webhook payload to another endpoint (e.g. legacy GAS notifier)
# LINE_WEBHOOK_FORWARD_URL=https://script.google.com/macros/s/xxxxx/exec
# LINE_WEBHOOK_FORWARD_SECRET=your_forward_hmac_secret
